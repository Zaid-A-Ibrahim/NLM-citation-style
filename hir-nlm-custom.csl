<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0">
  <info>
    <title>HIR Custom (NLM with DOI)</title>
    <id>http://www.zotero.org/styles/hir-custom-nlm-doi</id>
    <link href="http://www.zotero.org/styles/hir-custom-nlm-doi" rel="self"/>
    <author>
      <name>Zaid Al-Kaabi (Customized by ChatGPT)</name>
    </author>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <updated>2025-08-01T00:00:00+00:00</updated>
    <summary>HIR Custom Style based on NLM, adds DOI and simplifies date format</summary>
  </info>
  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="first" initialize-with=". " delimiter=", "/>
      <label form="short" prefix=", " text-case="lowercase" suffix="."/>
      <et-al term="et-al" font-style="italic"/>
    </names>
  </macro>
  <macro name="title">
    <text variable="title" text-case="sentence"/>
  </macro>
  <macro name="container-title">
    <text variable="container-title" form="short" strip-periods="true"/>
  </macro>
  <macro name="issued">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>
  <macro name="pages">
    <text variable="page"/>
  </macro>
  <macro name="doi">
    <group prefix=". " delimiter=" ">
      <text value="https://doi.org/"/>
      <text variable="DOI"/>
    </group>
  </macro>
  <citation>
    <layout prefix="[" suffix="]" delimiter=",">
      <text variable="citation-number"/>
    </layout>
  </citation>
  <bibliography et-al-min="7" et-al-use-first="6" second-field-align="flush">
    <layout hanging-indent="true" delimiter=". ">
      <text variable="citation-number" suffix=". "/>
      <group delimiter=". ">
        <text macro="author"/>
        <text macro="title"/>
        <group delimiter=" ">
          <text macro="container-title"/>
          <text macro="issued"/>
          <text variable="volume"/>
          <text variable="issue" prefix="(" suffix=")"/>
          <text macro="pages"/>
        </group>
        <text macro="doi"/>
      </group>
    </layout>
  </bibliography>
</style>
